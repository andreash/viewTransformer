{% extends '::base.html.twig' %}

{% block body -%}
    <h1>ContactInfo list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Home</th>
                <th>Cell</th>
                <th>Work</th>
                <th>Fax</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('contactinfo_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>({{ entity.home|slice(0, 3) }}) {{ entity.home|slice(3, 3) }}-{{ entity.home|slice(6, 4) }}</td>
                <td>{{ entity.cell }}</td>
                <td>{{ entity.work }}</td>
                <td>{{ entity.fax }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('contactinfo_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('contactinfo_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('contactinfo_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
