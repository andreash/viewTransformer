{% extends '::base.html.twig' %}

{% block body -%}
    <h1>ContactInfo</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Home</th>
                <td>({{ entity.home|slice(0, 3) }}) {{ entity.home|slice(3, 3) }}-{{ entity.home|slice(6, 4) }}</td>
            </tr>
            <tr>
                <th>Cell</th>
                <td>{{ entity.cell }}</td>
            </tr>
            <tr>
                <th>Work</th>
                <td>{{ entity.work }}</td>
            </tr>
            <tr>
                <th>Fax</th>
                <td>{{ entity.fax }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('contactinfo') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('contactinfo_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('contactinfo_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
